<%= render :partial => @category %>

<p>
  <%= link_to 'See All categories', categories_path %>
</p>


<h2>Dishes</h2>
<div id="Dishes">
  <%= render :partial => @category.dishes %>
</div>

<% if(signed_in?)  %>
  <% form_for [@category, Dish.new],:html => { :multipart => true } do |f| %>
    <p>
      <br />
      <%= f.label :name, "Name new dish" %><br />
      <%= f.text_field :name %>

      <br />
      <%= f.label :description %><br />
      <%= f.text_area :description %>
      <br />

      <%= f.label :price %><br />
      <%= f.text_field :price %>
    </p>
    <br />
    <%= f.file_field :photo %>
    <br />
    <p><%= f.submit "Add Dish" %> </p>
  <% end %>
<% end %>
